<div data-controller="refeicao-plano">
  <%= form_with(model: dieta, class: "space-y-6") do |form| %>
    <% if dieta.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <p class="font-bold">Houve <%= pluralize(dieta.errors.count, "erro") %> que impediu esta dieta de ser salva:</p>
        <ul class="list-disc ml-5 mt-2 space-y-1">
          <% dieta.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow-md rounded-xl p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">Informações Básicas da Dieta</h2>
      
      <div class="space-y-4">
        <div>
          <%= form.label :nome, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :nome, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :objetivo, "Objetivo da Dieta (Ex: Cutting, Bulking, Manutenção)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :objetivo, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :descricao, "Descrição / Observações Gerais", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :descricao, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-xl p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">Refeições e Macros</h2>

      <div data-refeicao-plano-target="fieldsContainer" class="space-y-4">
        <%= form.fields_for :refeicoes do |refeicao_fields| %>
          <%= render 'refeicao_fields', form: refeicao_fields %>
        <% end %>
      </div>

      <template data-refeicao-plano-target="template">
        <%= form.fields_for :refeicoes, Refeicao.new, child_index: "NEW_RECORD" do |refeicao_fields| %>
          <%= render 'refeicao_fields', form: refeicao_fields %>
        <% end %>
      </template>

      <div class="mt-6 pt-4 border-t">
        <%= link_to 'Adicionar Refeição', "#", data: { action: "click->refeicao-plano#addField" }, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 transition duration-150" %>
      </div>
    </div>

    <div class="mt-8 flex justify-start space-x-4">
      <%= form.submit 'Salvar Dieta', class: "cursor-pointer inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150" %>
      <%= link_to 'Cancelar', dietas_path, class: "inline-flex justify-center py-2 px-6 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition duration-150" %>
    </div>
  <% end %>
</div>
