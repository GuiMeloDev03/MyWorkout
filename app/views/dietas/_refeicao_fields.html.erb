<div class="refeicao-fields p-4 border border-gray-200 rounded-lg bg-gray-50 shadow-sm mb-4 transition-all duration-300 ease-in-out" data-refeicao-plano-target="fields">
  <div class="flex justify-between items-center mb-4 border-b pb-2">
    <h4 class="text-md font-semibold text-gray-700">Refeição</h4>
    
    <%= form.hidden_field :_destroy %>
    <%= link_to "Remover Refeição", "#", data: { action: "click->refeicao-plano#removeField" }, class: "text-red-500 hover:text-red-700 text-sm font-medium transition duration-150" %>
  </div>

  <div class="mb-4">
    <%= form.label :nome, "Nome da Refeição (Ex: Café da Manhã, Pré-Treino)", class: "block text-sm font-medium text-gray-600" %>
    <%= form.text_field :nome, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :descricao, "Descrição dos Alimentos", class: "block text-sm font-medium text-gray-600" %>
    <%= form.text_area :descricao, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Ex: Ovos mexidos, batata doce, banana, whey protein." %>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div>
      <%= form.label :calorias, "Calorias (Kcal)", class: "block text-xs font-medium text-gray-600" %>
      <%= form.number_field :calorias, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
    
    <div>
      <%= form.label :proteinas, "Proteínas (g)", class: "block text-xs font-medium text-gray-600" %>
      <%= form.number_field :proteinas, step: :any, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :carboidratos, "Carboidratos (g)", class: "block text-xs font-medium text-gray-600" %>
      <%= form.number_field :carboidratos, step: :any, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
   
    <div>
      <%= form.label :gorduras, "Gorduras (g)", class: "block text-xs font-medium text-gray-600" %>
      <%= form.number_field :gorduras, step: :any, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  </div>
</div>
