<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6 border-b pb-4">
    <h1 class="text-3xl font-extrabold text-gray-900">Minhas Dietas</h1>
    <%= link_to 'Nova Dieta', new_dieta_path, 
      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 transition duration-150" %>
  </div>

  <% if @dietas.empty? %>
    <div class="p-6 bg-yellow-50 border border-yellow-200 rounded-lg text-center">
      <p class="text-yellow-700 italic">Você ainda não possui dietas cadastradas. Crie sua primeira dieta agora!</p>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @dietas.each do |dieta| %>
        <div class="bg-white shadow-lg rounded-xl p-5 flex justify-between items-center hover:shadow-xl transition duration-300">
          <div>
            <h2 class="text-xl font-semibold text-gray-800">
              <%= link_to dieta.nome, dieta_path(dieta), class: "hover:text-indigo-600 transition duration-150" %>
            </h2>
            <p class="text-sm text-gray-500 mt-1">Objetivo: <%= dieta.objetivo %></p>
            <p class="text-xs text-gray-400 mt-1"><%= dieta.refeicoes.count %> Refeições</p>
          </div>
          
          <div class="flex space-x-3">
            <%= link_to 'Visualizar', dieta_path(dieta), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900 transition duration-150" %>
            <%= link_to 'Editar', edit_dieta_path(dieta), class: "text-sm font-medium text-gray-500 hover:text-gray-700 transition duration-150" %>
            <%= link_to 'Excluir', dieta_path(dieta), 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir a dieta '#{dieta.nome}' e todas as suas refeições?" }, 
                class: "text-sm font-medium text-red-500 hover:text-red-700 transition duration-150" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
