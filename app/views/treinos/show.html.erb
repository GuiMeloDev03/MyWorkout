<div class="max-w-4xl mx-auto" data-controller="accordion">
  <div class="bg-white shadow rounded-xl p-8">
    
    <!-- Header do Treino -->
    <div class="mb-8 border-b pb-4">
      <h1 class="text-3xl font-extrabold text-gray-900 mb-2"><%= @treino.nome %></h1>
      <p class="text-lg text-indigo-600">Objetivo: <%= @treino.objetivo.presence || 'Não especificado' %></p>
    </div>

    <div class="mt-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Ficha de Treino</h2>
        
        <!-- Botão para adicionar novo DiaTreino (Ação CRUD aninhada) -->
        <%= link_to 'Novo Dia de Treino', new_treino_dia_treino_path(@treino), 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 transition duration-150" %>
      </div>

      <% if @treino.dia_treinos.empty? %>
        <div class="p-6 bg-gray-50 border border-gray-200 rounded-lg text-center">
          <p class="text-gray-500 italic">Este treino ainda não possui Dias de Treino (Ex: Treino A, Treino B). </p>
          <p class="mt-2 text-sm text-indigo-500">Clique em "Novo Dia de Treino" para começar a montar a ficha.</p>
        </div>
      <% else %>
        <!-- ACORDION para Dias de Treino -->
        <div class="space-y-4">
          <% @treino.dia_treinos.each_with_index do |dia_treino, index| %>
            <div class="border border-gray-200 rounded-lg overflow-hidden shadow-sm">
              <!-- Header do Dia de Treino (Botão do Acordion) -->
              <button 
                data-action="click->accordion#toggle" 
                data-accordion-target="button"
                data-index="<%= index %>"
                class="flex justify-between items-center w-full p-4 bg-gray-100 hover:bg-gray-200 focus:outline-none transition duration-150 ease-in-out"
                aria-expanded="<%= index == 0 ? 'true' : 'false' %>">
                
                <span class="text-lg font-semibold text-gray-800">
                  <%= dia_treino.nome %> 
                  <span class="text-sm font-normal text-indigo-500">(<%= dia_treino.exercicio_planos.count %> Exercício<%= 's' if dia_treino.exercicio_planos.count != 1 %>)</span>
                </span>
                
                <svg data-accordion-target="icon" class="w-5 h-5 text-gray-600 transform <%= index == 0 ? 'rotate-180' : '' %> transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <!-- Conteúdo do Dia de Treino (Acordion) -->
              <div 
                data-accordion-target="content"
                data-index="<%= index %>"
                class="<%= index == 0 ? 'block' : 'hidden' %> bg-white p-4">
                
                <% if dia_treino.exercicio_planos.empty? %>
                  <p class="text-gray-500 italic mb-4">Nenhum exercício adicionado a este dia de treino.</p>
                <% else %>
                  <!-- Tabela de Exercícios -->
                  <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                      <tr>
                        <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exercício</th>
                        <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Séries</th>
                        <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Repetições</th>
                        <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Carga</th>
                        <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Obs.</th>
                      </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                      <% dia_treino.exercicio_planos.each do |exercicio| %>
                        <tr class="hover:bg-gray-50">
                          <td class="px-3 py-2 whitespace-nowrap text-sm font-medium text-gray-900"><%= exercicio.nome %></td>
                          <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-500"><%= exercicio.series %></td>
                          <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-500"><%= exercicio.repeticoes %></td>
                          <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-500"><%= exercicio.carga.presence || '-' %></td>
                          <td class="px-3 py-2 text-sm text-gray-500 max-w-xs overflow-hidden text-ellipsis"><%= exercicio.observacoes.presence || '-' %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                <% end %>

                <!-- Ações do Dia de Treino -->
                <div class="flex justify-end space-x-3 pt-4 mt-4 border-t">
                  <%= link_to 'Editar Exercícios', edit_treino_dia_treino_path(@treino, dia_treino), 
                    class: "text-sm font-medium text-indigo-600 hover:text-indigo-900 transition duration-150" %>
                  
                  <%= link_to 'Excluir Dia', [@treino, dia_treino], 
                    data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir o dia de treino '#{dia_treino.nome}'?" }, 
                    class: "text-sm font-medium text-red-500 hover:text-red-700 transition duration-150" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!-- FIM ACORDION -->
      <% end %>
    </div>

    <!-- Links de Ação Principais -->
    <div class="mt-8 pt-4 border-t flex space-x-4">
      <%= link_to 'Editar Informações do Treino', edit_treino_path(@treino), class: "text-sm font-medium text-gray-500 hover:text-gray-700 transition duration-150" %>
      <%= link_to 'Voltar para a Lista', treinos_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 transition duration-150 border-l pl-4" %>
    </div>
  </div>
</div>
