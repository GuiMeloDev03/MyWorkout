<%= form_with(model: exercicio, class: "space-y-6") do |f| %>
  <% if exercicio.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <p class="font-bold">Não foi possível salvar o exercício:</p>
      <ul class="mt-2 list-disc list-inside">
        <% exercicio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :nome, "Nome do Exercício", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :nome, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Ex: Supino Reto" %>
    </div>

    <div>
      <%= f.label :grupo_muscular, "Grupo Muscular Primário", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :grupo_muscular, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Ex: Peito, Pernas, Costas" %>
    </div>

    <div>
      <%= f.label :instrucoes, "Instruções Detalhadas", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :instrucoes, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Ex: Deite no banco, desça a barra até tocar o peito..." %>
    </div>
  </div>

  <div class="flex justify-end pt-4 border-t border-gray-200">
    <%= f.submit "Salvar Exercício", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer transition duration-150" %>
  </div>
<% end %>
